<div class="container">

    {{#if success_message}}

    <div class="alert alert-success fade show mt-2 auto-hide" role="alert">
        <strong>{{success_message}}</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    {{/if}}

    {{#if error_message}}

    <div class="alert alert-danger fade show mt-2 auto-hide" role="alert">
        <strong>{{error_message}}</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    {{/if}}
</div>